<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@mipmap/background2"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.example.xue.myqq.view.CircleImageView
        android:id="@+id/qq_usr_icon"
        android:layout_width="@dimen/header_image_70dp"
        android:layout_height="@dimen/header_image_70dp"
        android:src="@mipmap/header_q"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/header_image_10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/qq_name"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="@dimen/header_name_size"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_static"
        android:textColor="#fff"
        android:textStyle="italic"
        />

</LinearLayout>
